<resources>
    <style name="AppTheme.NoneTranslucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextStyle</item>
    </style>

    <style name="ToolbarMenuTextStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="DownloadProgressStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">@dimen/dimen_1dp</item>
        <item name="android:maxHeight">@dimen/dimen_1dp</item>
        <item name="android:progressDrawable">@drawable/progress_download</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/base_little_margin"
                                    android:layout_marginRight="@dimen/base_little_margin"
                                    android:layout_marginTop="@dimen/card_view_dimen"
                                    android:foreground="?attr/selectableItemBackground"
                                    card_view:cardCornerRadius="@dimen/dimen_0dp"
                                    card_view:cardElevation="@dimen/card_view_elevation"
                                    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_background_container"
            android:layout_width="@dimen/news_list_image_width"
            android:layout_height="@dimen/news_list_image_height"
            android:layout_marginBottom="@dimen/news_list_image_margin"
            android:layout_marginLeft="@dimen/news_list_image_margin"
            android:layout_marginTop="@dimen/news_list_image_margin">

            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_primary"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="@dimen/video_play_icon_size"
                android:layout_height="@dimen/video_play_icon_size"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_video_play"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rl_background_container"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/base_little_margin"
            android:layout_toRightOf="@id/rl_background_container"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="减肥的开始了几十fjkdfklsjk块的了解放路上"
            android:textColor="@color/title_text"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_video_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_background_container"
            android:layout_alignLeft="@id/tv_title"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:text="时长:35:23"
            android:textColor="@color/content_text"
            android:textSize="@dimen/content_text_size"/>

        <TextView
            android:id="@+id/tv_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_video_length"
            android:layout_marginRight="@dimen/base_margin"
            android:text="发布时间：04/12"
            android:textColor="@color/content_text"
            android:textSize="@dimen/content_text_size"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
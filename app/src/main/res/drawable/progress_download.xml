<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/grey_dark1"
                android:centerY="0.75"
                android:endColor="@color/grey_dark1"
                android:startColor="@color/grey_dark1" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/blue_light"
                    android:centerY="0.75"
                    android:endColor="@color/blue_light"
                    android:startColor="@color/blue_light" />
            </shape>
        </clip>
    </item>

</layer-list>